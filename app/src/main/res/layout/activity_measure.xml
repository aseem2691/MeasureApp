<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Full Screen AR View -->
    <io.github.sceneview.ar.ARSceneView
        android:id="@+id/scene_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- iOS-style Overlay for 3D Labels -->
    <com.example.measureapp.ar.OverlayView
        android:id="@+id/overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Bar: Undo and Clear -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/undo_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="↶"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_background"
            android:contentDescription="Undo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Clear"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Prompt Text (3D Reticle handles center visualization now) -->
    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Move to start"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center_reticle" />

    <!-- Bottom Control Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="#66000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Main Shutter Button -->
        <Button
            android:id="@+id/add_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_button"
            android:text="+"
            android:textSize="36sp"
            android:textColor="@android:color/black"
            android:contentDescription="@string/add_point_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Done Button (checkmark to finish measurement) -->
        <Button
            android:id="@+id/done_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#4CAF50"
            android:text="✓"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:enabled="false"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/add_button"
            app:layout_constraintEnd_toStartOf="@+id/add_button"
            app:layout_constraintTop_toTopOf="@+id/add_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
