<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Full Screen AR View -->
    <io.github.sceneview.ar.ARSceneView
        android:id="@+id/scene_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- iOS-style Overlay for 3D Labels -->
    <com.example.measureapp.ar.OverlayView
        android:id="@+id/overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- iOS-style Top Card with Measurement Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/measurement_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#F0FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/prompt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Point at a surface to start"
                android:textColor="#1C1C1E"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/measurement_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Tap + to add point"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- iOS-style Right Side Controls -->
    <LinearLayout
        android:id="@+id/right_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Undo Button - iOS Style -->
        <androidx.cardview.widget.CardView
            android:id="@+id/undo_card"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/undo_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@drawable/ic_undo"
                android:contentDescription="Undo"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </androidx.cardview.widget.CardView>

        <!-- Clear Button - iOS Style -->
        <androidx.cardview.widget.CardView
            android:id="@+id/clear_card"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:visibility="gone"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Clear"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- iOS-style Bottom Control Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_controls"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/bottom_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Capture/Share Button (Left side) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/capture_button_card"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="48dp"
            android:visibility="gone"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/add_button_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_button_card">

            <ImageView
                android:id="@+id/capture_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="#1C1C1E"
                android:contentDescription="Capture"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </androidx.cardview.widget.CardView>

        <!-- Main Shutter Button - iOS Camera Style -->
        <androidx.cardview.widget.CardView
            android:id="@+id/add_button_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless">

                <!-- Inner Circle for + icon -->
                <View
                    android:id="@+id/inner_circle"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inner_circle_bg" />

                <!-- Plus Icon -->
                <ImageView
                    android:id="@+id/plus_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="@string/add_point_label" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Done Button - iOS Green Checkmark -->
        <androidx.cardview.widget.CardView
            android:id="@+id/done_button_card"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:visibility="gone"
            app:cardBackgroundColor="#34C759"
            app:cardCornerRadius="32dp"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/add_button_card"
            app:layout_constraintEnd_toStartOf="@+id/add_button_card"
            app:layout_constraintTop_toTopOf="@+id/add_button_card">

            <ImageView
                android:id="@+id/done_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@drawable/ic_check"
                android:contentDescription="Done"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Help hint for first use -->
    <TextView
        android:id="@+id/help_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Move device to detect surfaces"
        android:textColor="#CCFFFFFF"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
